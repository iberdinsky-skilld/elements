---
variables:
  attributes:
    class: 'a-title'
    data-test: 'test'
  modifiers:
    - a-title--h1
    - a-title--h2
    - a-title--h3
  template_settings:
    tag:
      label: 'Custom Tag'
      description: 'Select html Tag'
      modifiers:
        - h1
        - h2
        - h3
plugins:
  formatters:
    components_title_formatter:
      label: 'Title'
      library: COMPONENT/title-styling
      field_types:
        - string
        - string_long
        - text
        - text_long
        - text_with_summary
  libraries:
    cowsay:
      js:
        https://unpkg.com/cowsay@1.5.0/build/cowsay.umd.js: { type: external, minified: true }
    title-styling:
      version: VERSION
      css:
        base:
          COMPONENT/title.css: {}
      js:
        COMPONENT/title.js: {}
      dependencies:
        - core/drupal
        - elements/cowsay
default_content:
  content:
    content: 'Lorem Ipsum'
---
<{{content.template_settings.tag|default('h2')}}{{ attributes }}>
  {{- content.content -}}
</{{content.template_settings.tag|default('h2')}}>
